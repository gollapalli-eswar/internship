<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quiz with Image Background</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-size: cover;
      background-position: center;
      transition: background-image 0.5s ease-in-out;
      margin: 0;
      padding: 0;
    }

    .overlay {
      background-color: rgba(0, 0, 0, 0.6);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .quiz-container {
      background: white;
      padding: 20px;
      border-radius: 8px;
      max-width: 600px;
      width: 100%;
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }

    .question {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .options button {
      display: block;
      margin: 10px 0;
      padding: 10px;
      width: 100%;
      background: #e0e0e0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }

    .options button:hover {
      background: #c0c0c0;
    }

    #result {
      font-weight: bold;
      font-size: 18px;
      margin-top: 10px;
    }

    button:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
  </style>
</head>
<body>
  <div class="overlay">
    <div class="quiz-container" id="quiz">
      <div class="question" id="question"></div>
      <div class="options" id="options"></div>
      <button onclick="nextQuestion()">Next</button>
      <p id="result"></p>
    </div>
  </div>

  <script>
    const quizData = [
      {
        question: "What is the capital of France?",
        options: ["Berlin", "Madrid", "Paris", "Rome"],
        correct: 2,
        images: [
          "https://upload.wikimedia.org/wikipedia/commons/7/7e/Berlin_Brandenburger_Tor_abends.jpg",
          "https://upload.wikimedia.org/wikipedia/commons/f/f9/Plaza_Mayor_de_Madrid_06.jpg",
          "https://upload.wikimedia.org/wikipedia/commons/a/a6/Paris_Night.jpg",
          "https://upload.wikimedia.org/wikipedia/commons/5/5b/Colosseum_in_Rome%2C_Italy_-_April_2007.jpg"
        ]
      },
      {
        question: "Which language runs in a web browser?",
        options: ["Java", "C", "Python", "JavaScript"],
        correct: 3,
        images: [
          "https://upload.wikimedia.org/wikipedia/commons/8/88/Java_logo.png",
          "https://upload.wikimedia.org/wikipedia/commons/1/19/C_Logo.png",
          "https://upload.wikimedia.org/wikipedia/commons/c/c3/Python-logo-notext.svg",
          "https://upload.wikimedia.org/wikipedia/commons/9/99/Unofficial_JavaScript_logo_2.svg"
        ]
      },
      {
        question: "Which planet is known as the Red Planet?",
        options: ["Earth", "Mars", "Jupiter", "Saturn"],
        correct: 1,
        images: [
          "https://upload.wikimedia.org/wikipedia/commons/9/97/The_Earth_seen_from_Apollo_17.jpg",
          "https://upload.wikimedia.org/wikipedia/commons/0/02/OSIRIS_Mars_true_color.jpg",
          "https://upload.wikimedia.org/wikipedia/commons/e/e2/Jupiter.jpg",
          "https://upload.wikimedia.org/wikipedia/commons/c/c7/Saturn_during_Equinox.jpg"
        ]
      }
    ];

    let currentQuestion = 0;
    let score = 0;

    function loadQuestion() {
      const q = quizData[currentQuestion];
      document.getElementById("question").innerText = q.question;
      const optionsContainer = document.getElementById("options");
      optionsContainer.innerHTML = "";
      document.getElementById("result").innerText = "";

      q.options.forEach((option, index) => {
        const btn = document.createElement("button");
        btn.innerText = option;
        btn.onclick = () => checkAnswer(index);
        optionsContainer.appendChild(btn);
      });
    }

    function checkAnswer(selected) {
      const q = quizData[currentQuestion];
      document.body.style.backgroundImage = `url('${q.images[selected]}')`;

      const buttons = document.querySelectorAll("#options button");
      buttons.forEach((btn, idx) => {
        btn.disabled = true;
        if (idx === q.correct) {
          btn.style.background = "#b0ffb0"; // green
        } else if (idx === selected) {
          btn.style.background = "#ffb0b0"; // red
        }
      });

      if (selected === q.correct) {
        document.getElementById("result").innerText = "‚úÖ Correct!";
        score++;
      } else {
        document.getElementById("result").innerText = "‚ùå Wrong!";
      }
    }

    function nextQuestion() {
      currentQuestion++;
      if (currentQuestion < quizData.length) {
        loadQuestion();
      } else {
        document.querySelector(".quiz-container").innerHTML = `
          <h2>Quiz Completed üéâ</h2>
          <p>Your score is ${score} out of ${quizData.length}</p>
        `;
      }
    }

    loadQuestion();
  </script>
</body>
</html>



**Joke-Api**

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>üòÇ Joke with Funny Background</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      transition: background-image 0.5s ease-in-out;
    }

    .overlay {
      background-color: rgba(0, 0, 0, 0.6);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .container {
      background: white;
      padding: 30px;
      border-radius: 10px;
      max-width: 500px;
      width: 100%;
      box-shadow: 0 0 15px rgba(0,0,0,0.3);
      text-align: center;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 15px;
    }

    #joke {
      font-size: 18px;
      margin-bottom: 20px;
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
      background: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background: #0056b3;
    }
  </style>
</head>
<body>

  <div class="overlay">
    <div class="container">
      <h1>üòÇ Joke of the Moment</h1>
      <p id="joke">Click the button to get a funny joke!</p>
      <button onclick="getJoke()">Get New Joke</button>
    </div>
  </div>

  <script>
    const funnyBackgrounds = [
      "https://media.giphy.com/media/3o7aD2saalBwwftBIY/giphy.gif",
      "https://media.giphy.com/media/jUwpNzg9IcyrK/giphy.gif",
      "https://media.giphy.com/media/26tknCqiJrBQG6bxC/giphy.gif",
      "https://media.giphy.com/media/3o6Zt481isNVuQI1l6/giphy.gif",
      "https://media.giphy.com/media/xT5LMzIK1AdZJ5xQ4c/giphy.gif",
      "https://media.giphy.com/media/l3vR9O7V4VnYX4Ffy/giphy.gif"
    ];

    async function getJoke() {
      const jokeEl = document.getElementById("joke");
      document.body.style.backgroundImage = "url('https://i.gifer.com/ZKZg.gif')"; // loading animation
      jokeEl.innerText = "Loading joke...";

      try {
        
        const response = await fetch("https://icanhazdadjoke.com/", {
          headers: { Accept: "application/json" }
        });
        const data = await response.json();
        jokeEl.innerText = data.joke;

        
        const randomBg = funnyBackgrounds[Math.floor(Math.random() * funnyBackgrounds.length)];
        document.body.style.backgroundImage = `url('${randomBg}')`;

      } catch (error) {
        jokeEl.innerText = "Oops! Couldn't fetch a joke.";
        document.body.style.backgroundImage = "url('https://media.giphy.com/media/3o6Zt6D7RgYj7NnG7m/giphy.gif')";
        console.error("Joke fetch failed:", error);
      }
    }

    
    getJoke();
  </script>

</body>
</html>
